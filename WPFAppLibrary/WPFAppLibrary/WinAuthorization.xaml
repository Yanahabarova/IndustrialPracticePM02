<Window x:Class="WPFAppLibrary.WinAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppLibrary"
        mc:Ignorable="d"
        Title="Авторизация"  WindowStartupLocation="CenterScreen" x:Name="WindowAuthorization" Height="600" Width="1000">
    <Grid>
        <Border CornerRadius="30" Height="450" Width="450" Background="#FFEAB4A8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="АВТОРИЗАЦИЯ" FontSize="28" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
                <Label VerticalAlignment="Center" Margin="20 5" Content="Логин" FontSize="18" Grid.Row="1"/>
                <TextBox Margin="20 5" x:Name="tbLogin" FontSize="18" Grid.Row="2"/>
                <PasswordBox Margin="20 5" x:Name="pbPassword" PasswordChar="*" FontSize="18" Grid.Row="4"/>
                <Label VerticalAlignment="Center" Margin="20 5" Content="Пароль" FontSize="18" Grid.Row="3"/>
                <Button Margin="20,5" x:Name="btEnter" Click="btEnter_Click" Content="Войти" FontSize="18" Grid.Row="5" />
                <Button Margin="20,5" x:Name="btContinueAsGuest" Click="btContinueAsGuest_Click" Content="Новый читатель" FontSize="18" Grid.Row="6"/>
            </Grid>
        </Border>
    </Grid>
</Window>
